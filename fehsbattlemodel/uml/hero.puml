'scale 600 width

class BaseHero{
Int hp
Int atk
              }
class ArmedHero{
    Param boon
    Param bane
}
class BattleUnit{
    int hp
    fight(BattleUnit)
}
BaseHero <-- ArmedHero
BaseHero -->  Skill
ArmedHero -->Skill
